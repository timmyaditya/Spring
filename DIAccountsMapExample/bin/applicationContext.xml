<?xml version="1.0" encoding="UTF-8"?>

<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">  
               
    
    <bean id="idLoan1" class="org.timmyaditya.diaccountsmapexample.Loan">
    <constructor-arg value="1" type="int"></constructor-arg>
    <constructor-arg value="Home"></constructor-arg>
    <constructor-arg value="1000" type="int"></constructor-arg>
    </bean>
    
    
    <bean id="idLoan2" class="org.timmyaditya.diaccountsmapexample.Loan">
    <constructor-arg value="2" type="int"></constructor-arg>
    <constructor-arg value="Car"></constructor-arg>
    <constructor-arg value="2000" type="int"></constructor-arg>
    </bean>
    
    
    <bean id="idInst1" class="org.timmyaditya.diaccountsmapexample.Installments">
    <constructor-arg value="1" type="int"></constructor-arg>
    <constructor-arg value="1 aug 2000"></constructor-arg>
    <constructor-arg value="100" type="int"></constructor-arg>
    </bean>
  
   
    <bean id="idInst2" class="org.timmyaditya.diaccountsmapexample.Installments">
    <constructor-arg value="2" type="int"></constructor-arg>
    <constructor-arg value="2 aug 2000"></constructor-arg>
    <constructor-arg value="200" type="int"></constructor-arg>
    </bean>
     
    <bean id="idInst3" class="org.timmyaditya.diaccountsmapexample.Installments">
    <constructor-arg value="3" type="int"></constructor-arg>
    <constructor-arg value="3 aug 2000"></constructor-arg>
    <constructor-arg value="300" type="int"></constructor-arg>
    </bean>
     
    <bean id="idInst4" class="org.timmyaditya.diaccountsmapexample.Installments">
    <constructor-arg value="4" type="int"></constructor-arg>
    <constructor-arg value="4 aug 2000"></constructor-arg>
    <constructor-arg value="400" type="int"></constructor-arg>
    </bean>
    
    <bean id="idInstList1" class="org.timmyaditya.diaccountsmapexample.InstallmentList">
    	<constructor-arg>
    		<list>
    			<ref bean="idInst1" />
    			<ref bean="idInst2" />
    			<ref bean="idInst3" />
    		</list>
    	</constructor-arg>
    </bean>
    
    
    <bean id="idInstList2" class="org.timmyaditya.diaccountsmapexample.InstallmentList">
    	<constructor-arg>
    		<list>
    			<ref bean="idInst4" />
    		</list>
    	</constructor-arg>
    </bean>


	<bean id="idAccount" class="org.timmyaditya.diaccountsmapexample.Account">
		<constructor-arg value="1" type="int"></constructor-arg>
		<constructor-arg value="Timmy Aditya"></constructor-arg>
		<constructor-arg>
			<map>
				<entry key-ref="idLoan1" value-ref="idInstList1"></entry>
				<entry key-ref="idLoan2" value-ref="idInstList2"></entry>
			</map>
		</constructor-arg>
		
	</bean>
  
</beans>  
