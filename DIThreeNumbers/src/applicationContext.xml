<?xml version="1.0" encoding="UTF-8"?>

<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">  
 
<bean id="idDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
  <property name="driverClassName" value="com.mysql.jdbc.Driver"></property>
  <property name="url" value="jdbc:mysql://localhost:3306/THREENUMBERS"></property>
  <property name="username" value="root"></property>
  <property name="password" value=""></property>
</bean>
  
 <bean id="idJdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
   <property name="dataSource" ref="idDataSource"></property>
 </bean>  
 
 <bean id="idDao1" class="org.timmyaditya.threenumber.dao.impl.ThreeNumbersDaoImpl">
 <property name="jdbcTemplate" ref="idJdbcTemplate"></property>
 </bean>
 
 <bean id="idService" class="org.timmyaditya.threenumber.service.impl.ThreeNumbersServiceImpl">
 	<property name="threeNumbersDao" ref="idDao1"></property>
 </bean>
 
 <bean id="idController" class="org.timmyaditya.threenumber.controller.Controller">
 	<property name="threeNumbersService" ref="idService"></property>
 </bean>
   
</beans>  
